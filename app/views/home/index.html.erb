<div class="container">
	<div class="row">
	<h1>All Products</h1>
		<a href="customers" class="btn btn-primary btn-sm">View Customers</a>
		<a href="orders" class="btn btn-info btn-sm">List Orders</a>
		<a href="<%= new_product_path %>" class="btn btn-success btn-sm">Add New Product</a>
	</div><br>
	<div class="row">
	<table class="col-md-12 table-bordered table-striped table-condensed cf">
		<thead>
			<tr>
				<th>Serial Number</th>
				<th>Product ID</th>
				<th>SKU</th>
				<th>Type</th>
				<th>Category</th>
				<th>Manage</th>
			</tr>
		</thead>
		<tbody>
			<% @products[:item].reverse.each_with_index do |product, index| %>
			<tr>
				<td><%= index %></td>
				<td><%= product[:product_id] %></td>
				<td><%= product[:sku] %></td>
				<td><%= product[:type] %></td>
				<td><%= product[:category_ids][:item] %></td>
				<td>
					<a href="<%= product_view_path(product[:product_id]) %>" class="label label-info">View</a>
					<a href="<%= edit_product_path(product[:product_id]) %>" class="label label-primary">Edit</a>
					<%= link_to 'Delete', url_for(action: :delete, id: product[:product_id]), :method => :delete, class: "label label-danger", :data => { confirm: "Are you sure?"} %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
	<div class="clearfix"></div>
	<br>
	</div>
</div>