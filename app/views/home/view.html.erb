<div class="container"><br><br>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >


          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Product Info | <%= @product[:name] %></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-12 col-lg-12 " align="center">
                  <% if @image_url.present? %>
                    <% @image_url.each do |image| %>
                      <img alt="User Pic" src="<%= image[:url] %>" style="max-width: 30%;">
                    <% end %>
                  <% end %>
                </div>
                <div class="col-md-12 col-lg-12" style="margin-top: 20px;">
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Product ID:</td>
                        <td><%= @product[:product_id] %></td>
                      </tr>
                      <tr>
                        <td>SKU:</td>
                        <td><%= @product[:sku] %></td>
                      </tr>
                      <tr>
                        <td>Description:</td>
                        <td><%= @product[:description] %></td>
                      </tr>

                         <tr>
                             <tr>
                        <td>Price:</td>
                        <td><%= @product[:price] %></td>
                      </tr>
                        <tr>
                        <td>Product Type:</td>
                        <td><%= @product[:type_id] %></td>
                      </tr>
                        <tr>
                          <td>Stock Status</td>
                          <td><%= @stock[:item][:is_in_stock] ? "<span class='label label-success'>In Stock</span>".html_safe : "<span class='label label-danger'>Out of Stock</span>".html_safe %></td>
                        </tr>
                        <tr>
						              <td>Stock Info</td>
                          <td><%= @stock[:item][:qty] %></td>
                        </tr>
                      </tr>
                    </tbody>
                  </table>

                </div>
              </div>
            </div>
           <div class="panel-footer">
                  <a data-original-title="Go Back" href='<%= root_url %>' data-toggle="tooltip" type="button" class="btn btn-sm btn-primary">Back</a>
                  <span class="pull-right">
                      <a href="edit.html" data-original-title="Edit this product" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning">Edit Product</a>
                      <%= link_to 'Delete Product', url_for(action: :delete, id: @product[:product_id]), :method => :delete, class: "btn btn-sm btn-danger", :data => { confirm: "Are you sure?", "original-title" => 'Remove this product', :toggle => "tooltip"} %>
                  </span>
              </div>

          </div>
        </div>
      </div>
    </div>